@model IEnumerable<TasksList.Models.Task>
@{
    ViewBag.Title = "Index";
}
<h2>
    Index</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
        </th>
        <th>
            Name
        </th>
        <th>
            Date Created
        </th>
        <th>
            Difficulty
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            </td>
            <td>
                @if (item.IsDone)
                {
                    <del> @item.Name</del>
                }
                else
                { 
                    @item.Name
                }
            </td>
            <td>
                @String.Format("{0:g}", item.DateCreated)
            </td>
            <td>
                @item.Difficulty
            </td>
        </tr>
    }
</table>
